{
  "name": "skor",
  "author": "BigAB <bigab@live.ca>",
  "version": "0.0.5",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BigAB/skor.git"
  },
  "bugs": {
    "url": "https://github.com/BigAB/skor/issues"
  },
  "homepage": "https://github.com/BigAB/skor/tree/main/lib#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/skor.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=15"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "release": "release-it"
  },
  "devDependencies": {
    "commitizen": "^4.3.1",
    "husky": "^4.3.6",
    "release-it": "^14.2.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/**/*(spec|test).{ts,tsx,js,jsx}",
      "<rootDir>/**/*.(spec|test).{ts,tsx,js,jsx}"
    ]
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run lint",
        "npm test",
        "npm build"
      ],
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    }
  }
}
